<% include header %>

    <div class="container">
        <div class="row">
            <div class="col-sm-12" style="margin-top: 5em">
                <div>
                    <h6 style="text-align: center">Add New Comments</h6>
                    <div style="width: 30%; margin: 25px auto;">
                        <form action="/products/<%=productId%>/<%=userId%>/comments" method="POST">
                            <div class="form-group">
                                <input class="form-control" type="text" name="comment" placeholder="text">
                            </div>
                            <div class="form-group">
                                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                            </div>
                        </form>
                        <a href="/">Go Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

