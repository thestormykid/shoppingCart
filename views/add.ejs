<% include header.ejs %>
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-4">
                <div style="margin: 25px auto;" class="card">
                    <div class="card-content row">
                        <form action="/addProduct" method="POST" class="col s12">
                                <h6 style="text-align: center">ADD PRODUCT(image via url)</h6>
                            <div class="row">
                                <div class="form-group input-field col s12">
                                    <input id="product_name" class="form-control validate" type="text" name="name">
                                    <label for="product_name">PRODUCT NAME</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group input-field col s12">
                                    <input id="product_price" class="form-control validate" type="text" name="price">
                                    <label for="product_price">PRODUCT PRICE</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group input-field col s12">
                                    <input class="form-control validate" type="text" name="image" id="image_url">
                                    <label for="product_price">IMAGE URL</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group input-field col s12">
                                    <input id="description" class="form-control validate" type="text" name="description">
                                    <label for="description">DESCRIPTION</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group input-field col s12">
                                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <a href="/">Go Back</a>
                </div>
            </div>
            <div class="col-sm-4">
                <div style="margin: 25px auto;" class="card">
                    <div class="card-content row">
                        <form action="/upload" method="POST" enctype = "multipart/form-data" class="col s12">
                            <h6 style="text-align: center">ADD PRODUCT(via file-upload)</h6>
                            <div class="row">
                                <div class="form-group input-field col s12">
                                    <input id="product_name2" class="form-control validate" type="text" name="name">
                                    <label for="product_name2">PRODUCT NAME</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group input-field col s12">
                                    <input id="product_price2" class="form-control validate" type="text" name="price">
                                    <label for="product_price2">PRODUCT PRICE</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group input-field file-field col s12">
                                    <div class="btn">
                                        <span>File</span>
                                        <input type="file" multiple name="files">
                                    </div>
                                    <div class="file-path-wrapper">
                                        <input class="file-path validate" type="text" placeholder="Upload one or more files">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group input-field col s12">
                                    <input id="description2" class="form-control validate" type="text" name="description">
                                    <label for="description2">DESCRIPTION</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group input-field col s12">
                                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <a href="/">Go Back</a>
                </div>
            </div>
        </div>
<% include footer.ejs %>